{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.autonova.com/billing/invoice.created.json",
  "title": "invoice.created",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "version", "data"],
  "properties": {
    "type": { "const": "invoice.created" },
    "version": { "type": "integer", "const": 1 },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "invoice_id",
        "project_id",
        "customer_email",
        "customer_user_id",
        "amount_total",
        "currency",
        "status"
      ],
      "properties": {
        "invoice_id": { "type": "string", "format": "uuid" },
        "project_id": { "type": "string", "format": "uuid" },
        "customer_email": { "type": "string", "format": "email" },
        "customer_user_id": { "type": "integer" },
        "project_name": { "type": "string" },
        "project_description": { "type": "string" },
        "amount_total": { "type": "integer", "minimum": 0 },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "status": { "type": "string", "enum": ["DRAFT", "OPEN", "PAID", "VOID"] }
      }
    }
  }
}
