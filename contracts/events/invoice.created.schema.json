{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "invoice.created",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "type": {
      "const": "invoice.created",
      "description": "Event type identifier."
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Semantic version of the payload contract."
    },
    "data": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "invoice_id": {"type": "string", "format": "uuid"},
        "project_id": {"type": "string", "format": "uuid"},
        "customer_id": {"type": "string", "format": "uuid"},
        "amount_total": {"type": "integer", "minimum": 0},
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "status": {
          "type": "string",
          "enum": ["DRAFT", "OPEN", "PAID", "VOID"]
        }
      },
      "required": ["invoice_id", "project_id", "customer_id", "amount_total", "currency", "status"]
    }
  },
  "required": ["type", "version", "data"]
}
