{
  "info": {
    "name": "Employee Dashboard Service API",
    "description": "API collection for testing Employee Dashboard Service endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Jobs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs"]
        },
        "description": "Get all jobs, optionally filtered by employeeId query parameter"
      }
    },
    {
      "name": "Get All Jobs by Employee",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs?employeeId={{employeeId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs"],
          "query": [
            {
              "key": "employeeId",
              "value": "{{employeeId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Get Active Jobs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/active",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "active"]
        },
        "description": "Get all jobs with ACTIVE status"
      }
    },
    {
      "name": "Get Active Jobs by Employee",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/active?employeeId={{employeeId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "active"],
          "query": [
            {
              "key": "employeeId",
              "value": "{{employeeId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Start Job",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/{{jobId}}/start",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "{{jobId}}", "start"]
        },
        "description": "Start a job (changes status from PENDING or PAUSED to IN_PROGRESS)"
      }
    },
    {
      "name": "Update Job Status",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"COMPLETED\",\n  \"notes\": \"Job finished successfully\"\n}"
        },
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/{{jobId}}/status",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "{{jobId}}", "status"]
        },
        "description": "Update job status with custom status value. Valid statuses: PENDING, ACTIVE, IN_PROGRESS, PAUSED, COMPLETED, STOPPED"
      }
    },
    {
      "name": "Pause Job",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/{{jobId}}/pause",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "{{jobId}}", "pause"]
        },
        "description": "Pause a job (changes status from IN_PROGRESS to PAUSED)"
      }
    },
    {
      "name": "Stop Job",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/{{jobId}}/stop",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "{{jobId}}", "stop"]
        },
        "description": "Stop a job (changes status to STOPPED)"
      }
    },
    {
      "name": "Get Job by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8084/api/employee/jobs/{{jobId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8084",
          "path": ["api", "employee", "jobs", "{{jobId}}"]
        },
        "description": "Get detailed information about a specific job"
      }
    }
  ],
  "variable": [
    {
      "key": "jobId",
      "value": "YOUR_JOB_UUID_HERE",
      "type": "string"
    },
    {
      "key": "employeeId",
      "value": "YOUR_EMPLOYEE_UUID_HERE",
      "type": "string"
    }
  ]
}
