          "name": "Create Time Log - SUCCESS",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"employeeId\": \"{{employeeId}}\",\n  \"projectId\": \"{{projectId}}\",\n  \"taskId\": \"{{taskId}}\",\n  \"hours\": 2.5,\n  \"note\": \"Completed oil change successfully\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/time-logs",
              "host": ["{{baseUrl}}"],
              "path": ["time-logs"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData.approvalStatus).to.eql('PENDING');",
                  "    pm.expect(jsonData.hours).to.eql(2.5);",
                  "});",
                  "",
                  "pm.test(\"Save timeLogId for other tests\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('timeLogId', jsonData.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "response": []
        },
