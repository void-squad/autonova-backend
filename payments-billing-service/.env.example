# ==============================================================================
# PAYMENTS & BILLING SERVICE CONFIGURATION (.env.example)
# ==============================================================================

# --- APPLICATION PORT ---
SERVER_PORT=8095

# ========================================
# 1. DATABASE (POSTGRESQL)
# ========================================
PBS_DB_URL=jdbc:postgresql://localhost:5432/payments_billing
PBS_DB_USERNAME=payments_billing
PBS_DB_PASSWORD=<your_database_password>

# ========================================
# 2. MESSAGING (RABBITMQ)
# ========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest

# ========================================
# 3. STRIPE INTEGRATION SECRETS
# ========================================
STRIPE_API_KEY=<sk_test_..._your_stripe_secret_key>
STRIPE_PUBLISHABLE_KEY=<pk_test_..._your_stripe_publishable_key>
STRIPE_WEBHOOK_SECRET=<whsec_..._your_stripe_webhook_signing_secret>

# ========================================
# 4. JWT AUTHENTICATION / SECURITY
# ========================================
AUTH_JWT_ISSUER=local-autonova
AUTH_JWT_AUDIENCE=autonova-api
AUTH_JWT_HS256_SECRET=<base64_encoded_32_byte_secret_key_shared_with_auth_service>

# ========================================
# 5. Queues (RabbitMQ bindings)
# ========================================
PBS_QUOTE_APPROVED_QUEUE=payments.quote-approved
PBS_INVOICE_EXCHANGE=billing.invoice
PBS_PAYMENT_EXCHANGE=billing.payment
